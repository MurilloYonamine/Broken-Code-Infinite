<div class="modal" id="modal2">
    <div class="row rounded-4" id="caixa2">
        <div class="content">
            <h2>Cadastro</h2>
            <hr>
            <!-- Insire seu conteÃºdo -->
            <form action="/registrar" method="POST">

                <div class="form-group">
                    <label for="cnome">Nome:</label>
                    <input type="text" name="cnome" id="cnome" required>
                </div>

                <div class="form-group">
                    <label for="cnick">Nickname:</label>
                    <input type="text" name="cnick" id="cnick" maxlength="3" minlength="3" placeholder="3 caracteres"
                        required>
                </div>

                <div class="form-group">
                    <label for="csenha">Senha:</label>
                    <input type="password" name="csenha" id="csenha" required>
                </div>

                <div id='erro' style="display: block;">
                    {{#if erroCadastro}}
                    <script>
                        let registrar = document.querySelector("#modal2").style.display = 'block';
                    </script>
                    <div>{{erroCadastro}}</div>

                    {{/if}}
                </div>

                <div class="form-buttons">
                    <input type="submit" value="Cadastrar">
                    <div id="entrar">
                        <p><ins>Login</ins></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>